@page
@model MIQUELINGENIERIA.Pages.RegistroModel
@{
    ViewData["Title"] = "Registro - MIQUELINGENIERIA";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg p-4" style="width: 500px;">
        <h2 class="text-center text-primary mb-4">Registro de Usuarios - MIQUELINGENIERIA</h2>

        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success text-center">@TempData["Mensaje"]</div>
        }

        <form method="post">
            <div class="form-group mb-3">
                <label>Nombres</label>
                <input asp-for="Usuario.Nombres" class="form-control" placeholder="Ingresa tus nombres" />
                <span asp-validation-for="Usuario.Nombres" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Apellidos</label>
                <input asp-for="Usuario.Apellidos" class="form-control" placeholder="Ingresa tus apellidos" />
                <span asp-validation-for="Usuario.Apellidos" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Fecha de Nacimiento</label>
                <input asp-for="Usuario.FechaNacimiento" type="date" class="form-control" />
                <span asp-validation-for="Usuario.FechaNacimiento" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Correo Electrónico</label>
                <input asp-for="Usuario.Correo" type="email" class="form-control" placeholder="ejemplo@correo.com" />
                <span asp-validation-for="Usuario.Correo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Teléfono</label>
                <input asp-for="Usuario.Telefono" class="form-control" placeholder="Ingresa tu número" />
                <span asp-validation-for="Usuario.Telefono" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Dirección</label>
                <input asp-for="Usuario.Direccion" class="form-control" placeholder="Ingresa tu dirección" />
                <span asp-validation-for="Usuario.Direccion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Sexo</label>
                <select asp-for="Usuario.Sexo" class="form-control">
                    <option value="">Seleccione...</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                    <option value="Otro">Otro</option>
                </select>
                <span asp-validation-for="Usuario.Sexo" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success btn-lg shadow">Registrar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
